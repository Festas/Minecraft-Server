{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Users Configuration Schema",
  "description": "Schema for multi-user authentication with role-based access control",
  "type": "object",
  "required": ["users"],
  "properties": {
    "users": {
      "type": "array",
      "description": "List of users with access to the console",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["username", "password", "role"],
        "properties": {
          "username": {
            "type": "string",
            "description": "Unique username for login",
            "minLength": 3,
            "maxLength": 32,
            "pattern": "^[a-zA-Z0-9_-]+$"
          },
          "password": {
            "type": "string",
            "description": "Bcrypt hashed password"
          },
          "role": {
            "type": "string",
            "description": "User role determining access level",
            "enum": ["owner", "admin", "moderator", "viewer"]
          },
          "createdAt": {
            "type": "string",
            "description": "ISO 8601 timestamp of user creation",
            "format": "date-time"
          },
          "createdBy": {
            "type": "string",
            "description": "Username of the user who created this account"
          },
          "lastLogin": {
            "type": "string",
            "description": "ISO 8601 timestamp of last successful login",
            "format": "date-time"
          },
          "enabled": {
            "type": "boolean",
            "description": "Whether the account is enabled",
            "default": true
          }
        }
      }
    }
  }
}
