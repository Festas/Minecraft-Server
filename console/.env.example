# Console Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password

# Plugin Manager Bearer Token (for stateless API authentication)
# Generate with: openssl rand -base64 48
# Minimum 32 characters recommended
PLUGIN_ADMIN_TOKEN=generate-a-secure-bearer-token-here

# RCON Configuration (must match server.properties)
RCON_HOST=host.docker.internal
RCON_PORT=25575
RCON_PASSWORD=change-this-rcon-password

# Session Configuration
SESSION_SECRET=generate-a-random-32-char-string-here

# CSRF Protection (REQUIRED)
# Generate with: openssl rand -base64 32
CSRF_SECRET=generate-a-secure-csrf-secret-here

# Redis Configuration (for persistent sessions)
# Required for session persistence across server restarts
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD=  # Optional: Set if Redis requires authentication

# Docker Container Name (for server control features)
MC_CONTAINER_NAME=minecraft-server

# Minecraft Server Path (inside container)
MC_SERVER_DIR=/minecraft

# Environment
NODE_ENV=production

# Cookie Security Override (optional)
# Set to 'false' for HTTP testing (local dev, CI, curl)
# Leave commented for production HTTPS
# COOKIE_SECURE=false

# ============================================================================
# PLUGIN INTEGRATIONS
# ============================================================================

# Dynmap Integration
# Enable Dynmap integration to fetch player positions and map data
DYNMAP_ENABLED=false
# DYNMAP_BASE_URL=http://localhost:8123
# DYNMAP_API_TOKEN=  # Optional: API token if Dynmap requires authentication

# EssentialsX Integration
# Enable EssentialsX WebAPI integration for player info and server status
ESSENTIALSX_ENABLED=false
# ESSENTIALSX_BASE_URL=http://localhost:8080
# ESSENTIALSX_API_TOKEN=  # Optional: API token for EssentialsX WebAPI

# ============================================================================
# WEBHOOKS & INTEGRATIONS
# ============================================================================

# Webhook Configuration
# WEBHOOK_RETRY_COUNT=3              # Number of retry attempts for failed webhooks
# WEBHOOK_TIMEOUT_MS=30000           # Request timeout in milliseconds (30 seconds)
# WEBHOOK_MAX_PAYLOAD_SIZE=1048576   # Maximum payload size (1 MB)

# Webhook Security
# WEBHOOK_RATE_LIMIT=60              # Maximum webhook requests per minute
# WEBHOOK_VERIFY_SSL=true            # Verify SSL certificates for outbound webhooks

# ============================================================================
# CI/CD DASHBOARD
# ============================================================================

# GitHub API Configuration
# Optional: GitHub Personal Access Token for CI/CD dashboard
# Enables downloading artifacts and triggering workflows
# Generate at: https://github.com/settings/tokens
# Required scopes: repo, workflow, actions:read
# GITHUB_TOKEN=
# GITHUB_OWNER=your-username
# GITHUB_REPO=your-repo-name

# ============================================================================
# ANALYTICS & METRICS PLUGINS
# ============================================================================

# ServerTap Integration
# Enable ServerTap REST API integration for server metrics
# ServerTap provides TPS, player data, and world information
SERVERTAP_ENABLED=false
SERVERTAP_HOST=localhost
SERVERTAP_PORT=4567
SERVERTAP_API_KEY=

# Plan Analytics Integration  
# Enable Plan plugin integration for player analytics
# Plan provides detailed player statistics, session data, and top players
PLAN_ENABLED=false
PLAN_HOST=localhost
PLAN_PORT=8804

